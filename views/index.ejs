<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini Whatsapp</title>
    <link rel="stylesheet" href="/stye.css">
</head>
<h3 class="new">All Chats</h3>
<form class="new" method="get" action="/chats/new">
    <button class="btn">New chat</button>
</form>

<% for (let chat of chats){ %>
    <div class="chats">
        <p class="text">From:<%= chat.from %>
        </p>
        <p class="text">To: <%= chat.to %>
        </p>
        <div>
            <p class="msg">Message: <%= chat.msg %>
            </p>
            <div class="form">
                <form class="form" method="get" action="/chats/<%= chat._id%>/edit">
                    <button class="edit">Edit message</button>
                </form>
            </div> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
            <div class="form">
                <form class="form" method="POST" action="/chats/<%= chat._id%>?_method=DELETE">
                    <button class="delete">Delete</button>
                </form>
            </div>

        </div>
        <p>
            <%= chat.created_at.toString().split(" ")[4]%>
        </p>

    </div>

    <% }%>

        <body>

        </body>

</html>